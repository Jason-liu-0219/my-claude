        }

        &:hover:not(.disabled) {
          border: 1px solid @color-outline03;
          border-radius: 4px;
          .arrow-container {
            color: @color-icon11;
            background: @color-outline03;
          }
        }
      }
    }
    .time-zone-group {
      > h6 {
        margin-bottom: 8px;
        color: @color-text03;
      }
      margin-top: 12px;
    }

    .retain-original-settings-description {
      margin-top: 8px;
      color: @color-text03;
      font-size: 12px;
    }
  }

  .buttons {
    display: flex;
    align-items: center;
    margin-top: 24px;
    justify-content: space-between;
    gap: 20px;

    button {
      width: 100%;
    }
  }

  .form-error-message {
    margin-top: 24px;
  }
}
