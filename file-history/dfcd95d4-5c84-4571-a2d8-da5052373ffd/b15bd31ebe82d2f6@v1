    capability
    version
  }
  auth
  storageCapacity
  archiveLimitedSize
  wizardFinished
  support
  sipUsername
  retentionDaysByUser
  maxRetentionDays
  isTimelapseEnabled
  sharedLink {
		id
		enabled
		password
		expireTime
		canPlayback
		url
	}
  contractInfo {
    mainPlan {
      planType
      additionalInfo
      state
    }
    addOnPlans {
      planType
      additionalInfo
      state
    }
    otherPlans {
      planType
      additionalInfo
      state
    }
  }
  protocol
}

