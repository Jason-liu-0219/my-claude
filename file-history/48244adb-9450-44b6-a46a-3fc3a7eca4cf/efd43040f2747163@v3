<template>
  <AppDialogue
    ref="removeUserDialogue"
    name="removeUserDialogue"
    :title="$t('Remove this user')"
    :state="currentState"
    :buttons="removeUserbuttons"
    :buttonIconStatusMapping="buttonIconStatusMapping"
    :closeWhenSuccess="false"
  >
    <template #content>
      <div class="default-dialog-content">
        <h6>
          <!-- eslint-disable-next-line max-len -->
          {{
            $t(
              'By removing the user, they will no long have access to the organization.\
               You will have to invite them to the organization again.',
            )
          }}
        </h6>
        <h6 class="bold">
          {{ $t('Are you sure you want to remove the following user from the organization?') }}
        </h6>
        <div class="avatar-email-wrapper">
          <AppAvatar
            :name="user.email"
            :role="user.role?.name?.toUpperCase()"
            :showBorder="user.isCurrentUser"
            roleIconStyle="smaller"
          />
          <h6 v-text="user.email" />
        </div>
      </div>
    </template>
    <template
      v-if="isError"
      #errorMessage
    >
      <AppFormErrorMessage :message="$t('Failed to remove user. Try again.')" />
    </template>
  </AppDialogue>
</template>

<script>
import { mapActions } from 'vuex';

import { DIALOGUE, USER_ROLE } from '@vivotek/const-vsaas';

import AppAvatar from '@/components/Avatars/AppAvatar.vue';

export default {
  name: 'RemoveUserDialogue',
  components: {
    AppAvatar,
  },
  props: {
    user: {
      type: Object,
      required: true,
    },
  },
  data() {
    return {
      currentState: DIALOGUE.STATE.DIALOGUE,
      buttonIconStatusMapping: DIALOGUE.SECONDARY_ACTION_BUTTON_MAPPING,
    };
  },
  methods: {
    ...mapActions('user', ['removeUserFromOrganization']),
    async confirm() {
      this.setState(DIALOGUE.STATE.PROCESSING);
      try {
        await this.removeUserFromOrganization(this.user.email);
        this.setState(DIALOGUE.STATE.SUCCESS);
        setTimeout(() => {
          this.$router.push('/user/management');
        }, 2000);
      } catch (error) {
        this.setState(DIALOGUE.STATE.ERROR);
      }
    },
    setState(state) {
      this.currentState = state;
    },
    show() {
      this.setState(DIALOGUE.STATE.DEFAULT);
      this.$refs.removeUserDialogue.show();
    },
  },
  computed: {
    removeUserbuttons() {
      return [
        {
          class: 'primary',
          text: this.$t('Keep'),
          clickHandler: () => {
            this.$refs.removeUserDialogue.hide();
          },
        },
        {
          class: 'ghost',
          text: this.isProcessing ? this.$t('Removing...') : this.$t('Remove'),
          clickHandler: () => {
            this.confirm();
          },
        },
      ];
    },
    isProcessing() {
      return this.currentState === DIALOGUE.STATE.PROCESSING;
    },
    isError() {
      return this.currentState === DIALOGUE.STATE.ERROR;
    },
  },
};
</script>

<style scoped lang="less">
.avatar-email-wrapper {
  display: flex;
  align-items: center;
  margin-top: 10px;
  padding: 16px 0;
  .app-avatar {
    width: 28px;
    height: 28px;
    + h6 {
      margin-left: 10px;
      display: flex;
      align-items: center;
    }
  }
}
</style>
